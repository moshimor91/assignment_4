<%= link_to("<< Back to List", subjects_path, :class => 'back-link') %>

<div class="subjects new">
  <h2>Create Book</h2>

  <%= form_for(@book, :url => subjects_path, :method => 'post') do |f| %>

    <table summary="Subject form fields">
      <tr>
        <th>Title</th>
        <td><%= f.text_field(:title) %></td>
      </tr>
      <tr>
        <th>Author</th>
        <td><%= f.text_field(:author) %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= f.text_field(:price) %></td>
      </tr>
      <tr>
        <th>Genre</th>
        <td><%= f.select :genre, ['Action', 'Classics', 'Comic', 'Detective and Mystery', 'Fantasy', 'Science Fiction']%></td>
      </tr>
      <tr>
        <th>Published date</th>
        <td><%= f.date_select :published_date, :start_year => 1500 %></td>
      </tr>
    </table>

    <div class="form-buttons">
      <%= f.submit("Create Book") %>
    </div>

  <% end %>
</div>
